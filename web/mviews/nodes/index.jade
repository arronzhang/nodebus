- if(nodes.length)
ul#nodes.list
  - each node in nodes
    - var url = nodePath(node)
    - var login = node.name + ":" + node.apikey
    - var mail = node.name + "-" + node.apikey + "@push.nodebus.com"
    li
      h3
        a(href=url+"/admin")= node.label
      p
        span API账号  
        span.lite= login
        br
        span Mail账号 
        span.lite= mail
