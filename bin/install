#!/bin/sh

ROOT_PATH=$(dirname "$(cd "$(dirname "$0")"; pwd)")

echo Notihub root path: ${ROOT_PATH}

cd ${ROOT_PATH}/api.notihub.com
npm install .
cd ${ROOT_PATH}/push.notihub.com
npm install .
cd ${ROOT_PATH}/m.notihub.com
npm install .
cd ${ROOT_PATH}/www.notihub.com
npm install .
cd ${ROOT_PATH}/transmitter
npm install .
